{
  "name": "sarradabet",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "npm run build:design-system && turbo run build",
    "build:design-system": "cd ../platform/design-system && npm ci --legacy-peer-deps && npm run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:generate": "npm run -w apps/api prisma:generate",
    "prisma:migrate:dev": "npm run -w apps/api prisma:migrate:dev --",
    "prisma:migrate:deploy": "npm run -w apps/api prisma:migrate:deploy",
    "prisma:studio": "npm run -w apps/api prisma:studio",
    "prisma:check": "npm run -w apps/api prisma:check",
    "db:seed": "npm run -w apps/api db:seed",
    "db:seed:simple": "npm run -w apps/api db:seed:simple",
    "db:reset": "npm run -w apps/api db:reset",
    "test": "turbo run test",
    "test:api": "npm run -w apps/api test",
    "test:api:watch": "npm run -w apps/api test:watch",
    "test:api:coverage": "npm run -w apps/api test:coverage",
    "test:api:unit": "npm run -w apps/api test:unit",
    "test:api:integration": "npm run -w apps/api test:integration",
    "test:web": "npm run -w apps/web test",
    "test:web:watch": "npm run -w apps/web test:watch",
    "test:web:coverage": "npm run -w apps/web test:coverage"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.6.1",
    "typescript": "5.9.3",
    "vitest": "^3.2.4",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "on-headers": ">=1.1.0",
    "@eslint/plugin-kit": ">=0.3.4",
    "minimatch": "^3.1.2",
    "test-exclude": {
      "minimatch": "^3.1.2"
    },
    "@vitest/coverage-v8": {
      "test-exclude": "^6.0.0",
      "minimatch": "^3.1.2"
    }
  }
}
